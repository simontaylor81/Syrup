<UserControl x:Class="ShaderEditorApp.View.PropertiesWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShaderEditorApp.View"
             xmlns:viewmodel="clr-namespace:ShaderEditorApp.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <UserControl.Resources>

        <!-- Style for property value text boxes. -->
        <Style TargetType="TextBox">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsReadOnly}" Value="True">
                    <Setter Property="IsReadOnly" Value="True"/>
                    <Setter Property="IsEnabled" Value="False"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Template for the different property types. -->
        <DataTemplate x:Key="ScalarPropertyRowTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{Binding DisplayName}"/>
                <TextBox Grid.Column="1" Text="{Binding Value, Mode=TwoWay}"/>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="BoolPropertyRowTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{Binding DisplayName}"/>
                <CheckBox Grid.Column="1" IsChecked="{Binding Value, Mode=TwoWay}"/>
            </Grid>
        </DataTemplate>


        <!-- Template for the different property types. -->
        <DataTemplate x:Key="ScalarPropertyValueTemplate">
            <TextBox Text="{Binding Value, Mode=TwoWay}"/>
        </DataTemplate>

        <DataTemplate x:Key="CompositePropertyValueTemplate">
            <ItemsControl ItemsSource="{Binding SubProperties}"
                          ItemTemplate="{StaticResource ScalarPropertyValueTemplate}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </DataTemplate>

        <local:PropertyValueTemplateSelector x:Key="PropertyValueTemplateSelector"
                                             ScalarTemplate="{StaticResource ScalarPropertyValueTemplate}"
                                             BoolTemplate="{StaticResource BoolPropertyRowTemplate}"
                                             CompositeTemplate="{StaticResource CompositePropertyValueTemplate}"/>

        <!-- Make items in GridView fill the entire column. -->
        <Style TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        </Style>

    </UserControl.Resources>

    <!--<Grid d:DataContext="{StaticResource DesignBinding}">-->
    <Grid d:DataContext="{d:DesignData Source=../SampleData/PropertySampleData.xaml}">
        <!--<Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <ItemsControl ItemsSource="{Binding Properties}"
                      ItemTemplateSelector="{StaticResource PropertyValueTemplateSelector}" Grid.RowSpan="2"
                      />-->
        
        <ListView Grid.Row="1" ItemsSource="{Binding Properties}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Property" DisplayMemberBinding="{Binding DisplayName}"/>
                    <GridViewColumn Header="Value" Width="200" CellTemplateSelector="{StaticResource PropertyValueTemplateSelector}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
